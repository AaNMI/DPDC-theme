{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<main class="post-page">
  <article class="post-content">
      <h1>{{ title }}</h1>
      {{#if feature_image}}
        <img class="post-image lazyload u-object-fit" {{#if feature_image}} data-srcset="{{img_url feature_image size=" 1x"}}
          1x, {{img_url feature_image size="2x" }} 2x, {{img_url feature_image size="3x" }} 3x" {{/if}} src={{img_url
          feature_image}} data-sizes="auto" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
      {{/if}}
      <section class="main-content">
        {{ content }}

        <div class="post-tags">
          {{tags separator=""}}
        </div>
      </section>

    </article>
</main>

{{/post}}