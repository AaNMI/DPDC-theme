{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<main class="post-page">
  <article class="post-content">
      <h1 class="post-title">{{ title }}</h1>
      {{#if feature_image}}
        <img class="post-image lazyload u-object-fit" {{#if feature_image}} data-srcset="{{img_url feature_image size=" 1x"}}
          1x, {{img_url feature_image size="2x" }} 2x, {{img_url feature_image size="3x" }} 3x" {{/if}} src={{img_url
          feature_image}} data-sizes="auto" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
      {{/if}}
      <section class="main-content">
        {{ content }}

        {{#if tags}}
          <div class="post-tags">
            {{tags separator=""}}
          </div>
        {{/if}}
      </section>
    </article>
</main>
<div class="share-buttons">
  <p>Share this article:</p>
  <a target="_blank" href="http://twitter.com/share?ref_src=twsrc%5Etfw&text=Check%20out%20this%20amazing%20article%20from%20Digital%20Patrakar%20Defence%20Clinic!">
    <i style="top: 2px; height: 20px; width: 20px;" class="twitter-icon"></i>
  </a>
  <a target="_blank" href="https://www.linkedin.com/sharing/share-offsite/?url=https%3A%2F%2Fwww.internetfreedom.in">
    <i style="top: 2px; height: 20px; width: 20px;" class="linkedin-icon"></i>
  </a>
</div>

{{/post}}